<section class="game">
  {{#each games}}
  <div class="card review-card" style="width: 18rem;">
    <img src="{{thumbnail}}" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title">{{title}}</h5>
      <p class="card-text">{{description}}</p>
      <a href="/reviews/{{id}}" class="btn btn-primary">See Reviews</a>
    </div>
  </div>

  {{/each}}
</section>